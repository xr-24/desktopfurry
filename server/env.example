# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/retro_desktop_game

# Security Configuration
# CRITICAL: Generate a strong, unique JWT secret for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-here-128-characters-minimum

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# CORS Configuration
# In production, set this to your actual frontend domain
FRONTEND_URL=https://yourdomain.com

# Rate Limiting (optional overrides)
# AUTH_RATE_LIMIT_WINDOW_MS=900000
# AUTH_RATE_LIMIT_MAX=10
# GENERAL_RATE_LIMIT_WINDOW_MS=900000
# GENERAL_RATE_LIMIT_MAX=100

# Session Configuration
# SESSION_TIMEOUT_MS=86400000

# Security Headers (optional overrides)
# TRUST_PROXY=true 